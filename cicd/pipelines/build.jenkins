#!/usr/bin/env groovy

def label = "build-node-app-${UUID.randomUUID().toString()}"

podTemplate(label: label,
        containers: [
            containerTemplate(name: 'jnlp', image: 'jenkins/inbound-agent:alpine'),
            containerTemplate(
                name: 'kaniko',
                image: 'gcr.io/kaniko-project/executor:debug',
                command: '/busybox/cat',
                ttyEnabled: true)
        ],
        volumes: [
            emptyDirVolume(mountPath: '/kaniko/.docker'),
            secretVolume(secretName: 'docker-creds', mountPath: '/docker/creds')
        ],
        ) {
    node(label) {
        stage('Checkout source code from git') {
            timeout(time: 3, unit: 'MINUTES') {
                checkout scm
            }
        }
        stage('Compile') {
            container(name: 'kaniko', shell: '/busybox/sh') {
                sh '''#!/busybox/sh
                mkdir -p .docker
                cp /docker/creds/config.json $HOME/.docker/
            /kaniko/executor --context `pwd` --dockerfile Dockerfile --verbosity debug --destination sylviab/node_app
          '''
            }
        }
        stage('Deploy') {
            container('jnlp') {
                echo 'Deployment phase'
                sh 'kubectl apply -f deploy/nodeApp_deploy.yaml'
                sh 'kubectl apply -f deploy/nodeApp_service.yaml'
            }
        }
    }
}